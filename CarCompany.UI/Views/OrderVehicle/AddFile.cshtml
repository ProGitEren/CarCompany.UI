@model AddFileViewModel
<br>
<br>
<h2 class="title-section">Register Engine</h2>
<hr />



<form asp-action="AddFilePost" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input hidden asp-for="Id"/>

   


    <div class="form-group">
        <label asp-for="Picture">Picture</label>
        <input type="file" class="form-control" asp-for="Picture" />
        <span asp-validation-for="Picture" class="text-danger"></span>

    </div>

   


    <div class="d-flex justify-content-center mt-3 " style="border-right:inherit !important;">

        <div class="w-10 btn-group d-flex justify-content-between align-items-center gap-2" role="group">
            <button type="submit" class="btn btn-outline-dark">Add</button>
        </div>

    </div>

</form>