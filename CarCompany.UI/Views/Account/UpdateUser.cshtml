@model UpdateUserViewModel
<br>
<br>
<h2 class="title-section">Update User</h2>
<hr />




<form asp-action="UpdateUser" method="post">
    @*  @if (TempData["errorMessage"] != null)
    {
    <div asp-validation-summary="All" class="text-danger"></div>
    } *@

    <div asp-validation-summary="All" class="text-danger"></div>
   
    

    <div class="form-group">
        <label style="color:black;margin-bottom:5px;" asp-for="Email">Email</label>
        <input type="text" class="form-control" asp-for="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div style="width:fit-content;height:10px;"></div>

    <div class="form-group">
        <label style="color:black;margin-bottom:5px;" asp-for="FirstName">FirstName</label>
        <input type="text" class="form-control" asp-for="FirstName" required />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div style="width:fit-content;height:10px;"></div>
    
    <div class="form-group">
        <label style="color:black;margin-bottom:5px;" asp-for="LastName">LastName</label>
        <input type="text" class="form-control" asp-for="LastName" required />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div style="color:bisque;margin-top:20px">
        <button type="submit" class="btn btn-primary" style="border-radius:50px;margin:auto;color::rgb(32, 28, 54);">Update</button>

    </div>


</form>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}
