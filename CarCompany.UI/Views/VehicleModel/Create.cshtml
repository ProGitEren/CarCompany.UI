@model RegisterVehicleModelViewModel
<br>
<br>
<h2 class="title-section">Register Vehicle Model</h2>
<hr />



<form asp-action="Create">

    <div class="form-group">
        <label asp-for="ModelShortName">Model Short Name</label>
        <input type="text" class="form-control" asp-for="ModelShortName" />
    </div>

    <div class="form-group">
        <label asp-for="ModelLongName">Model Long Name</label>
        <input type="text" class="form-control" asp-for="ModelLongName" />
    </div>

    <div class="form-group">
        <label asp-for="ModelYear">Model Year</label>
        <input type="number" min="1980" max="2030" value="1980" class="form-control" asp-for="ModelYear" />
    </div>

    <div class="form-group">
        <label asp-for="VehicleType">Vehicle Type</label>
        <select asp-for="VehicleType" class="form-control" asp-items="@(new SelectList(Model.VehicleTypeOptions, "Key", "Value"))">
            <option value="">Select Vehicle Type</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="EngineCode">Engine Code</label>
        <select asp-for="EngineCode" class="form-control" asp-items="@(new SelectList(Model.EngineCodeOptions, "Key", "Value"))">
            <option value="">Select Engine Code</option>
        </select>
    </div>

   

    <div class="form-group">
        <label asp-for="ManufacturedCountry">Manufactured Country</label>
        <select asp-for="ManufacturedCountry" class="form-control" asp-items="@(new SelectList(Model.ManufacturedCountryOptions, "Key", "Value"))">
            <option value="">Select Country</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Manufacturer">Manufacturer</label>
        <select asp-for="Manufacturer" class="form-control" asp-items="@(new SelectList(Model.ManufacturerOptions, "Key", "Value"))">
            <option value="">Select Manufacturer</option>
        </select>
    </div>


    <div class="form-group">
        <label asp-for="ManufacturedPlant">Manufactured Plant</label>
        <select asp-for="ManufacturedPlant" class="form-control" asp-items="@(new SelectList(Model.ManufacturedPlantOptions, "Key" , "Value"))">
            <option value="">Select Manufactured Plant</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CheckDigit">Check Digit</label>
        <select asp-for="CheckDigit" class="form-control" asp-items="@(new SelectList(Model.CheckDigitOptions))">
            <option value="">Select Check Digit</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>