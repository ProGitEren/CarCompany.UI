@using CarCompany.UI.Models.ViewModels
@model LoginViewModel
<br>
<br>
<h2 class="title-section">Login</h2>
<hr />




<form asp-action="Login" method="post">
   @*  @if (TempData["errorMessage"] != null)
    {
        <div asp-validation-summary="All" class="text-danger"></div>
    } *@
  
    <div asp-validation-summary="All" class="text-danger"></div>
    
    
    <div class="form-group">
        <label  style="color:black;margin-bottom:5px;" asp-for="Email">Username</label>
        <input type="email" class="form-control" asp-for="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div style="width:fit-content;height:10px;"></div>
    <div class="form-group">
        <label style="color:black;margin-bottom:5px;" *@ asp-for="Password">Password</label>
        <div class="input-group">
            <input asp-for="Password" type="password" class="form-control" id="passwordInput" required />
            <div class="input-group-append">
                <button style="border-color:#7c5a2c;background-color:rgb(32, 28, 54);box-shadow:2px 2px 2px inherit;margin:0;" class="btn btn-outline-secondary " type="button" id="showPasswordButton">
                    <i class="bi bi-eye-slash"></i>
                </button>
            </div>
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    

    <div style="color:bisque;margin-top:20px">
        <button type="submit" class="btn btn-primary" style="border-radius:50px;margin:auto;color::rgb(32, 28, 54);">Login</button>

    </div>
   

</form>


@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}  

<script>
    const passwordInput = document.getElementById('passwordInput');
    const showPasswordButton = document.getElementById('showPasswordButton');

    showPasswordButton.addEventListener('click', function (event) {
        event.preventDefault();
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    });
</script>

